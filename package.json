{
  "name": "budgetista",
  "version": "0.0.3",
  "private": true,
  "scripts": {
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "commit": "cz",
    "generate": "drizzle-kit generate:sqlite",
    "migrate": "tsx ./drizzle/migrate",
    "build": "npm run build:css && remix build",
    "build:css": "unocss './app/**/*.{ts,tsx}' -c ./uno.config.ts -o ./app/styles/uno.css --write-transformed",
    "dev": "remix dev",
    "dev:css": "unocss './app/**/*.{ts,tsx}' -c ./uno.config.ts -o ./app/styles/uno.css --watch --write-transformed",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@commitlint/cz-commitlint": "^18.0.0",
    "@remix-run/dev": "^2.1.0",
    "@remix-run/eslint-config": "^2.1.0",
    "@types/bcrypt": "^5.0.1",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@unocss/reset": "^0.56.5",
    "@unocss/transformer-variant-group": "^0.56.5",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.19.13",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "unocss": "^0.56.5",
    "zod": "^3.22.4"
  },
  "type": "module",
  "dependencies": {
    "@conform-to/react": "^0.9.0",
    "@conform-to/zod": "^0.9.0",
    "@iconify-json/lucide": "^1.1.135",
    "@libsql/client": "^0.3.6",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "@remix-run/css-bundle": "^2.1.0",
    "@remix-run/node": "^2.1.0",
    "@remix-run/react": "^2.1.0",
    "@remix-run/serve": "^2.1.0",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.10",
    "drizzle-orm": "^0.28.6",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0"
  }
}
